@page "/login"


@attribute [AllowAnonymous]

@if (ShowSpinner)
{
    <div class="spinner-border" style="width: 3rem; height: 3rem;" role="status">
        <span class="sr-only">Loading...</span>
    </div>
}
else
{
    <EditForm Model="UserForAuthentication" OnInvalidSubmit="Loginuser">
        <DataAnnotationsValidator />
        <div class="hold-transition login-page bg-login">
            <div class="login-box">
                <div class="card card-outline card-primary">
                    <div class="card-header text-center">
                        <a href="#" class="h1"><img src=""></a>
                    </div>
                    <div class="card-body">
                        <p class="login-box-msg">Sign in to start your session</p>
                        @if (ShowAuthenticationErrors)
                        {
                            <p class="text-center text-danger">@ErrorMessage</p>
                        }
                        <div class="input-group mb-3">
                          
                            <input type="text" @ref="firstInput" @bind-value="UserForAuthentication.UserName" Placeholder="UserName" maxlength="200" TabIndex="1" class="form-control" />
                            <ValidationMessage For="(()=>UserForAuthentication.UserName)" />
                        </div>
                        <div class="input-group mb-3">
                           
                            <input type="password" @bind-value="UserForAuthentication.Password" maxlength="50" Placeholder="Password" TabIndex="2" class="form-control" />
                            <ValidationMessage For="(()=>UserForAuthentication.Password)" />
                        </div>
                        
                         
                        <div class="row">
                            <div class="col-12">
                                <button type="submit" @onclick="Loginuser" class="btn btn-block btn-primary" tabindex="3"> Sign in</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </EditForm>
}







